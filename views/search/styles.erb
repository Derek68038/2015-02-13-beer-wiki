<div class="top">
<p><em><h1><%= @style_info.type %></h1></em></p>
</div>
<br>
<br>
<div class="style_attributes">
  <div>
    <h3>Color</h3>
    <em><%= @style_info.color %></em>
  </div>

  <br>

  <div>
    <h3>Perceived Bitterness</h3>
    <em><%= @style_info.bitterness %></em>
  </div>

  <br>

  <div>
    <h3>Alcohol</h3>
    <em><%= @style_info.alcohol %></em>
  </div>

  <br>

  <div>
    <h3>Flavor and Balance</h3>
    <em><%= @style_info.flavor %></em>
  </div>

  <br>

  <div>
    <h3>Related Styles</h3>
    <em><%= @style_info.related %></em>
  </div>

  <br>

  <div>
    <h3>Beer Reviews</h3>
      <% if @beer_style.length == 0 %>
        <em><%= "There have been no beers entered for this style." %></em>
      <% else %>
      <% @beer_style.each do |b| %>
        <em><h4><%=b.name%></h4>  
          <ul>
            <li><%= "ID - #{b.id}" %></li>
            <li><%= "Style - #{b.style_id_to_name}" %></li> 
            <li><%= "Color - #{b.color}" %></li> 
            <li><%= "IBUs - #{b.ibu}" %></li> 
            <li><%= "ABV - #{b.abv}%" %></li>
            <li><%= "Brewery - #{b.brewery_ids_to_name(b.brewery_id)}" %></li> 
            <li><%= "Review - #{b.review}" %></li>
            <li><%= "Date - #{b.date}" %></li></em>
          </ul>
        <% end %>
      <% end %>
  </div>
</div>

<br>

<div class="enter">
  <p><a href="/home" title="To homepage">Click here to return to the main homepage</a></p>
</div>