<div class="top">
<p><em><h1><%= @brewery_info.place %></h1></em></p>
</div>
<div class="picture">
  <img src="/brewing.jpeg" width="200" height="100" alt="Beaver View"/>
</div>

<br>
<br>

<div class="style_attributes">
<div>
  <h3>Description</h3>
  <em><%= @brewery_info.description %></em>
</div>

<br>
<br>

<div>
  <h3>Information</h3>
    <% @beer.find_by_name("#{@brewery_info.place}") %>
    <% @beer.locations.each do |location| %>
      <% if location.state == "NE" %>
        <em><p><strong><%= location.name %></strong></p>
        <p><%= location.street %></p> 
        <p><%= location.city %>,
        <%= location.state %>
        <%= location.zip %></p>
        <p><%= location.phone %></em></p>
        <br>
      <% end %>
   <% end %>
</div>

<br>

<div>
  <h3>Beer Reviews</h3>
    <% if @beer_brewery.length == 0 %>
      <em><%= "There have been no beers entered for this location." %></em>
    <% else %>
    <% @beer_brewery.each do |b| %>
      <em><h4><%=b.name%></h4>
        <ul>
          <li><%= "ID - #{b.id}" %></li>
          <li><%= "Style - #{b.style.category}" %></li>
          <li><%= "Color - #{b.color}" %></li>
          <li><%= "IBUs - #{b.ibu}" %></li>
          <li><%= "ABV - #{b.abv}%" %></li>
          <li><%= "Review - #{b.review}" %></li>
          <li><%= "Date - #{b.date}" %></li></em>
        </ul>
        <br>
      <% end %>
    <% end %>
</div>   
</div>

<br>

<div class="enter">
  <p><a href="/home" title="To homepage"><u>Click Here To Return To The Main Homepage</u></a></p>
</div>